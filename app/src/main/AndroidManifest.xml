<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shakeyboard.shakil.shakeyboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".SHAKeyboard"
            android:label="SHAKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <meta-data android:name="android.view.im" android:resource="@xml/method"></meta-data>
            <intent-filter>
                <action android:name="android.view.InputMethod"></action>
            </intent-filter>
        </service>
    </application>

</manifest>